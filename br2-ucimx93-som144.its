/dts-v1/;

/ {
	description = "Image file for the Arcturus uCMX93-SOM144 Linux Kernel with ramdisk";
	#address-cells = <1>;

	images {
		kernel {
			description = "Linux kernel";
			data = /incbin/("Image.gz");
			type = "kernel";
			arch = "arm64";
			os = "linux";
			compression = "gzip";
			load = <0x80400000>;
			entry = <0x80400000>;
			hash {
				algo = "sha1";
			};
		};
		som144 {
			description = "Flattened Device Tree blob";
			data = /incbin/("ucimx93-som144.dtb");
			type = "flat_dt";
			arch = "arm64";
			compression = "none";
			load = <0x90000000>;
			hash {
				algo = "sha1";
			};
		};
		ucevo10 {
			description = "Flattened Device Tree blob";
			data = /incbin/("ucimx93-som144-ucevo10.dtb");
			type = "flat_dt";
			arch = "arm64";
			compression = "none";
			load = <0x90000000>;
			hash {
				algo = "sha1";
			};
		};
		ucevo20 {
			description = "Flattened Device Tree blob";
			data = /incbin/("ucimx93-som144-ucevo20.dtb");
			type = "flat_dt";
			arch = "arm64";
			compression = "none";
			load = <0x90000000>;
			hash {
				algo = "sha1";
			};
		};
		tsdc11 {
			description = "Flattened Device Tree blob";
			data = /incbin/("ucimx93-som144-tsdc11.dtb");
			type = "flat_dt";
			arch = "arm64";
			compression = "none";
			load = <0x90000000>;
			hash {
				algo = "sha1";
			};
		};
		ramdisk {
			description = "Ramdisk";
			data = /incbin/("rootfs.cpio.gz");
			type = "ramdisk";
			arch = "arm64";
			os = "linux";
			hash {
				algo = "sha1";
			};
		};
	};

	configurations {
		default = "config1";
		config1 {
			kernel = "kernel";
			fdt = "som144";
			ramdisk = "ramdisk";
			hash {
				algo = "sha1";
			};
		};
		config2 {
			kernel = "kernel";
			fdt = "ucevo10";
			ramdisk = "ramdisk";
			hash {
				algo = "sha1";
			};
		};
		config3 {
			kernel = "kernel";
			fdt = "ucevo20";
			ramdisk = "ramdisk";
			hash {
				algo = "sha1";
			};
		};
		config4 {
			kernel = "kernel";
			fdt = "tsdc11";
			ramdisk = "ramdisk";
			hash {
				algo = "sha1";
			};
		};
	};
};

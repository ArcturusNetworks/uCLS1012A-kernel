			label = "OUT8";
			gpios = <&gpio2 15 GPIO_ACTIVE_HIGH>;
			default-state = "off";
		};
		amp_en {
			label = "AMP_EN";
			gpios = <&gpio3 0 GPIO_ACTIVE_HIGH>;
			default-state = "off";
		};
#endif
	};

	gpio-keys {
		compatible = "gpio-keys";
		status = "okay";
#if 0
		button1 {
			label = "IN1";
			linux,code = <432>;
			gpios = <&gpio2 0 GPIO_OPEN_DRAIN>;
